<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7ffb4"
    android:orientation="vertical" >

	<LinearLayout
        android:id="@+id/data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
		    android:id="@+id/text_data"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/events_data"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
	       	android:id="@+id/text_dataEvent"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:gravity="center_horizontal"
	       	android:layout_marginLeft="30dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>

	<TextView
        android:id="@+id/text_descripcioEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
    	android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/esport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
		    android:id="@+id/text_esport"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/events_esport"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
		    android:id="@+id/text_esportEvent"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="30dp"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/lloc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
		    android:id="@+id/text_zona"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/events_zona"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
		    android:id="@+id/text_zonaEvent"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="30dp"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/participants"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
	        android:id="@+id/text_participants"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/events_participants"
	        android:layout_gravity="center_vertical"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <Button
            android:id="@+id/button_participants"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_black"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:text="@string/afegir_participants"/>
        
    </LinearLayout>
   	
    <ListView
        android:id="@+id/list_participants"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:clickable="false"
        android:longClickable="false" />

</LinearLayout>