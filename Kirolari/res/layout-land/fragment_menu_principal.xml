<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/kirolari_menuprincipal_land"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView_titol_planning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:text=""
            	android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/TextView_MenuPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MenuPrincipal_noPlanning_text"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:layout_gravity="center_vertical|right"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_ContinuarPlanning"
        android:background="@drawable/button_black"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_below="@+id/scrollView1"
        android:text="@string/boto_ContinuarPlanning"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/button_ActivitatLliure"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_below="@+id/button_ContinuarPlanning"
        android:background="@drawable/button_black"
        android:text="@string/boto_ActivitatLliure"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/button_IntroduirEntrenament"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_below="@+id/button_ActivitatLliure"
        android:background="@drawable/button_black"
        android:text="@string/boto_IntroduirEntrenament"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>